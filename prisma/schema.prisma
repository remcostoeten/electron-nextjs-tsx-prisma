// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Snippet {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  content     String
  language    String    @default("plaintext")
  type        String    @default("CODE")
  tags        Tag[]
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("snippets")
}

model Tag {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  snippets Snippet[]
  
  @@map("tags")
} 